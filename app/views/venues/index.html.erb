<div class='events-header' style='background-image: url(<%= header_background_image_url %>)'>
  <div class="container">
    <h2> Discover upcoming events </h2>
    <%= form_tag(search_events_path(:term), :method => "get", id: "search-form", html: {class: 'form-group'}) do %>
    <%= text_field_tag :term, params[:term], class: 'form-control mr-sm-2', placeholder: "Search for events, shows, courses..." %>
    <% end %>
  </div>
</div>
<div class="container-fluid events-list">
  <% @events.in_groups_of(3) do |g| %>
  <div class="row">
    <% g.compact.each do |e| %>
    <%= render partial: 'card', locals: {event: e} %>
    <% end %>
  </div>  
  <% end %>
</div>
