<div class="container">
  <br>
  <br>
  <br>
  <h1>Sign In</h1>

  <hr>
  <br>
  <%= form_tag sessions_path do %>
  <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: "Registered email..."  %>
  <br>
  <%= password_field_tag :password, nil, class: 'form-control', placeholder: "Your password..." %>
  <br>
  <%= submit_tag "Let me in", class: 'btn btn-primary', data: {disable_with: "Signing in..."} %>
  <% end %>

</div>
