<!DOCTYPE html>
<html>
  <head>
    <title>qTick</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
      <a class="navbar-brand" href="<%= root_path %>">qTick</a>
      <ul class="nav navbar-nav">
        <% if current_user %>

          <li class="nav-item">
            <%= link_to "Logout", log_out_path, method: "delete" , class: "nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Profile", user_path(id: current_user.id), class: "nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Event", new_event_path, class: "nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Mine", myevent_path, class: "nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Venue", new_venue_path, class: "nav-link" %>
          </li>
        
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_path, class: "nav-link" %>
          </li>
        
          <li class="nav-item">
            <%= link_to "Login", new_session_path, class: "nav-link" %>
          </li>
        <% end %> 
      </ul>
    </nav>  

    <%= yield %>
  </body>
</html>
